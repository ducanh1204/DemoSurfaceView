<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/surface_view_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_take_photo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surface_view_1"
        android:text="Chụp"
        android:textAllCaps="false" />

    <SurfaceView
        android:id="@+id/surface_view_2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/btn_take_photo_1" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/btn_take_photo_1" />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_take_photo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surface_view_2"
        android:text="Chụp"
        android:textAllCaps="false" />

</RelativeLayout>